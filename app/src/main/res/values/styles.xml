<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text View Styles-->

    <style name="Widget.AppCompat.TextView.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontWeight">@integer/material_motion_duration_medium_2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.AppCompat.TextView.Subtitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontWeight">@integer/material_motion_duration_medium_2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.AppCompat.TextView.Content">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="Widget.AppCompat.TextView.Price">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>


    <!-- Button Styles-->

    <style name="Widget.MaterialComponents.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/PrimaryButtonOverlay</item>
    </style>

    <style name="PrimaryButtonOverlay">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontWeight">@integer/material_motion_duration_medium_2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>